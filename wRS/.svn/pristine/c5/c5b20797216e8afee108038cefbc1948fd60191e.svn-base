package roadshop.web.member.action;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;

import roadshop.web.member.svc.MemberRegistService;
import roadshop.web.member.vo.MemberInfo;

@Controller
public class MemberRegistAction{
	
	@Autowired
	MemberRegistService mrs;
	
	@RequestMapping("/main/memberRegist.mem")
	public String memberRegist(MemberInfo mi){
		boolean isSuccess = mrs.memberGetRegist(mi);
		
		if(isSuccess){
			return "/main/beforeMain.jsp";
		}
		else{
			return "/main/memberRegistView.mem";
		}
	}
	
}


