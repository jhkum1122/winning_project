$(document).ready(function(){
	$('#subMenu>a').mouseover(function(){
		var subMenu = $(this).next("ul");
		if(!subMenu.is(":visible"))
			subMenu.slideDown();
	});
});
$(document).ready(function(){
	$('#subMenu>#hide').mouseleave(function(){
		var subMenu = $('#subMenu>a').next("ul");
		if(subMenu.is(":visible"))
			subMenu.slideUp();
	});
});

